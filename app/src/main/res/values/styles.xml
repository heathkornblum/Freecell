<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimaryDark">@color/statusBar</item>
        <!-- TODO: Themify button styles -->
    </style>

    <style name="Victory" parent="AppTheme">
        <item name="android:background">@drawable/theme_button</item>
    </style>

    <style name="SettingsTheme" parent="AppTheme">
        <!-- TODO: consider using standard toolbar back button for settings instead of 'back to menu' button -->
    </style>

