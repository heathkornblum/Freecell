    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Various color themes are based on AppTheme.NoActionBar -->

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">?themeColorPrimary</item>
        <item name="android:textColorPrimary">?themeTextColorPrimary</item>
        <item name="colorAccent">?themeButtonStroke</item>
        <item name="colorButtonNormal">?themeButtonSolid</item>
    </style>

    <style name="ThemeButton" parent="AppTheme.NoActionBar">
        <item name="android:background">@drawable/theme_button</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">10dp</item>
        <item name="android:textColor">?themeTextColorPrimary</item>
    </style>

