<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollViewColorTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/colorThemeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?themeColorPrimary"
        tools:context=".activities.ColorThemeActivity">

        <Button
            android:id="@+id/dippedConeButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/theme_button_picker_layerlist"
            android:fontFamily="monospace"
            android:text="@string/dippedConeThemeButton"
            android:theme="@style/DippedConeTheme"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/hotFudgeSundaeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appBarLayout"
            app:layout_constraintVertical_chainStyle="spread_inside" />

        <Button
            android:id="@+id/hotFudgeSundaeButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_button_picker_layerlist"
            android:fontFamily="monospace"
            android:text="@string/hotFudgeSundaeThemeButton"
            android:theme="@style/HotFudgeSundaeTheme"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/bostonCreamPieButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dippedConeButton" />

        <Button
            android:id="@+id/bostonCreamPieButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_button_picker_layerlist"
            android:fontFamily="monospace"
            android:text="@string/bostonCreamPieThemeButton"
            android:theme="@style/BostonCreamPieTheme"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/blackForestCakeButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hotFudgeSundaeButton" />

        <Button
            android:id="@+id/blackForestCakeButton"
