            android:layout_height="wrap_content"
            android:background="@drawable/theme_button_picker_layerlist"
            android:fontFamily="monospace"
            android:text="@string/candyAppleThemeButton"
            android:theme="@style/CandyAppleTheme"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/kiwiButton"
