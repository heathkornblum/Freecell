            android:layout_height="wrap_content"
            android:background="@drawable/theme_button_picker_layerlist"
            android:fontFamily="monospace"
            android:text="@string/keyLimePieThemeButton"
            android:theme="@style/KeyLimePieTheme"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/mintChipButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lemonBarButton" />

        <Button
            android:id="@+id/mintChipButton"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/theme_button_picker_layerlist"
            android:fontFamily="monospace"
            android:text="@string/mintChipThemeButton"
            android:theme="@style/MintChipTheme"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/candyAppleButton"
